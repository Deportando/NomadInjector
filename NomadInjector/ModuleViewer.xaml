<Window x:Class="NomadInjector.ModuleViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Module Viewer" Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="White" 
        Foreground="Black">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Target Process:" FontWeight="Bold"/>
            <TextBox x:Name="TxtTargetProcess" IsReadOnly="True" Width="200" Margin="5,0,0,0"/>
            <Button x:Name="BtnRefresh" Content="Refresh" Width="80" Margin="10,0,0,0" Click="BtnRefresh_Click"/>
        </StackPanel>

        <ListView x:Name="LstModules" Grid.Row="1" Margin="0,0,0,10"
                  Background="#F8F8F8" Foreground="Black" BorderBrush="#CCCCCC">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Module Name" Width="150" DisplayMemberBinding="{Binding ModuleName}"/>
                    <GridViewColumn Header="Base Address" Width="100" DisplayMemberBinding="{Binding BaseAddress}"/>
                    <GridViewColumn Header="Size (Bytes)" Width="100" DisplayMemberBinding="{Binding Size}"/>
                    <GridViewColumn Header="Full Path" Width="300" DisplayMemberBinding="{Binding FullPath}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StatusBar Grid.Row="2">
            <StatusBarItem Content="{Binding ElementName=LstModules, Path=Items.Count, StringFormat=Total Modules: {0}}"/>
        </StatusBar>
    </Grid>
</Window>