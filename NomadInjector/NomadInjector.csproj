<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>NomadIcon.ico</ApplicationIcon>
    <RootNamespace>NomadInjector</RootNamespace>
    <Description>The Nomad Injector is a C# WPF tool used to load custom DLL files into a target process via LoadLibraryA injection.</Description>
    <Copyright>Copyright © 2025 Nomad Injector.</Copyright>
    <PackageIcon>NomadIcon.png</PackageIcon>
    <PlatformTarget>x86</PlatformTarget>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="NomadIcon.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="NomadIcon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\..\Downloads\NomadIcon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="NomadIcon.png" />
  </ItemGroup>

</Project>
